{
  "manifest_version": 2,
  "name": "BGG Linker",
  "description": "Possible BoardGameGeek.com links based off of Amazon titles",
  "version": "1.0",
  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "https://www.boardgamegeek.com",
    "https://www.boardgamegeek.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
